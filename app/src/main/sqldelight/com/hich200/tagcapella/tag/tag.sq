selectAll:
SELECT * FROM tag;

insertTag:
INSERT INTO tag (id, tag) VALUES (?, ?);

updateTag:
UPDATE tag SET tag = ? WHERE id = ?;

deleteTag:
DELETE FROM tag WHERE id = ?;

lastInsertedTag:
SELECT * FROM tag ORDER BY id DESC LIMIT 1;

selectTaggedSongs:
SELECT song.id, song.title, song.path FROM song_tag JOIN song ON song_tag.song = song.id WHERE tag = ?;

addSongTag:
INSERT INTO song_tag (song, tag) VALUES (?, ?);

deleteSongTag:
DELETE FROM song_tag WHERE id = ?;